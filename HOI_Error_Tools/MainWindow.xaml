<Window
    x:Class="HOI_Error_Tools.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:HOI_Error_Tools"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{StaticResource AppName}"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance local:MainWindowModel}"
    mc:Ignorable="d">
    <Grid>
        <Button
            Width="140"
            Margin="580,75,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding ClickSelectGameRootPathButtonCommand, Mode=Default}"
            Content="选择游戏根目录" />
        <Button
            Width="140"
            Margin="580,145,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding ClickSelectModRootPathButtonCommand, Mode=Default}"
            Content="选择Mod根目录" />
        <TextBox
            Width="430"
            Margin="120,48,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            hc:InfoElement.Title="游戏根目录"
            IsReadOnly="True"
            Style="{StaticResource TextBoxExtend}"
            Text="{Binding GameRootPath, Mode=Default}"
            TextWrapping="NoWrap" />
        <TextBox
            Width="430"
            Margin="120,118,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            hc:InfoElement.Title="Mod根目录"
            IsReadOnly="True"
            Style="{StaticResource TextBoxExtend}"
            Text="{Binding ModRootPath, Mode=Default}"
            TextWrapping="NoWrap" />
        <Button
            Width="164"
            Margin="300,245,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding ClickStartButtonCommand, Mode=Default}"
            Content="开始分析" />
        <Button
            Width="145"
            Margin="275,340,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Button" Click="Button_Click" />
    </Grid>
</Window>
